    "debug": "^3.0.1",
    "fs-extra": "^4.0.2",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "koa-session": "^5.5.0",
    "koa-static": "^4.0.1",
    "moment": "^2.18.1",
    "mongoose": "^4.11.11",
    "mongoose-long": "^0.1.1",
    "node-rsa": "^0.4.2",
